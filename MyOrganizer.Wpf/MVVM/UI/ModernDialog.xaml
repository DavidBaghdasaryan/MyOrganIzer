<Window x:Class="MyOrganizer.Wpf.MVVM.UI.ModernDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" ShowInTaskbar="False"
        Background="Transparent" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        MinWidth="360">

    <!-- Chrome -->
    <Border CornerRadius="12"
          Background="{DynamicResource Brush.Card}"
          BorderBrush="{DynamicResource Brush.Border}"
          BorderThickness="1" Padding="16">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title bar -->
                <RowDefinition Height="Auto"/>
                <!-- Body -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <DockPanel Grid.Row="0">
                <TextBlock x:Name="TxtTitle"
                   Text="Title"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource Brush.Text}"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>
                <Button x:Name="BtnClose"
                Content="✕"
                Width="28" Height="28"
                HorizontalAlignment="Right"
                Style="{DynamicResource SecondaryButton}"
                Click="BtnClose_Click"
                DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- Body: icon + message -->
            <Grid Grid.Row="1" Margin="0,12,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="36"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="IconGlyph"
                   Grid.Column="0"
                   FontFamily="Segoe Fluent Icons"
                   FontSize="24"
                   VerticalAlignment="Top"
                   Foreground="{DynamicResource Brush.Primary}"
                   Text="&#xE946;"/>
                <TextBlock x:Name="TxtMessage"
                   Grid.Column="2"
                   Text="Message text…"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource Brush.Text}"
                   MaxWidth="560"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel x:Name="ButtonsPanel"
                  Grid.Row="2"
                  Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Margin="0,0,0,0"
                  KeyboardNavigation.TabNavigation="Cycle"
                  KeyboardNavigation.DirectionalNavigation="Cycle"/>
        </Grid>
    </Border>
</Window>
