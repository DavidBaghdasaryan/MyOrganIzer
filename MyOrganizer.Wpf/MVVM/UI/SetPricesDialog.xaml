<Window x:Class="MyOrganizer.Wpf.MVVM.UI.SetPricesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="{loc:Loc SetPrices}" 
        Width="680" Height="420" 
        WindowStartupLocation="CenterOwner"
        Background="CornflowerBlue">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dg" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{loc:Loc Type}" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="{loc:Loc Tier1}" Binding="{Binding Tier1}" Width="*" />
                <DataGridTextColumn Header="{loc:Loc Tier2}" Binding="{Binding Tier2}" Width="*" />
                <DataGridTextColumn Header="{loc:Loc Tier3}" Binding="{Binding Tier3}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Style="{StaticResource ModernButton}" Margin="0,0,10,0" Background="DeepSkyBlue" Content="{loc:Loc OK}"  Width="100" IsDefault="True" Click="Ok_Click"/>
            <Button Style="{StaticResource ModernButton}" Content="{loc:Loc Cancel}" Background="LightGray" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
