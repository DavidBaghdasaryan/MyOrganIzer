<Window x:Class="MyOrganizer.Wpf.MVVM.UI.ToothWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="Tooth Chart" Height="715" Width="1015"
        WindowStyle="None"
        AllowsTransparency="True"
         
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        ShowInTaskbar="False"   
        WindowStartupLocation="CenterScreen"
        Background="#F0FFFF">

    <Window.Resources>


        <DataTemplate x:Key="BadgeTemplate">
            <Border CornerRadius="6" Padding="4,2" Margin="2"
             Background="{Binding Brush}" Opacity="0.95">
                <TextBlock Text="{Binding Code}"
                    FontWeight="Bold"
                    Foreground="White"
                    FontSize="10"/>
            </Border>
        </DataTemplate>
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <!-- keep FlipY etc. ... -->
        <ScaleTransform x:Key="FlipY" ScaleY="-1"/>
        <!-- Image sources -->
        <BitmapImage x:Key="Img.Incisor" 
                 UriSource="pack://application:,,,/MyOrganizer.Wpf;component/Assets/Teeth/incisor.png"/>
        <BitmapImage x:Key="Img.Canine"
                 UriSource="pack://application:,,,/MyOrganizer.Wpf;component/Assets/Teeth/canine.png"/>
        <BitmapImage x:Key="Img.Premolar"
                 UriSource="pack://application:,,,/MyOrganizer.Wpf;component/Assets/Teeth/premolar.png"/>
        <BitmapImage x:Key="Img.Molar"
                 UriSource="pack://application:,,,/MyOrganizer.Wpf;component/Assets/Teeth/molar.png"/>

        <!-- PNG button style (you already added; leaving here for completeness) -->
        <Style x:Key="ToothImageButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Image x:Name="PART_Icon"
                               Source="{TemplateBinding Tag}"   
                                Stretch="Uniform"
                               Width="{TemplateBinding Width}"
                               Height="{TemplateBinding Height}"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Icon" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Icon" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- (Optional) keep your ToothButtonStyle + Geometry if you still need vector version -->
    </Window.Resources>

    <Border Background="#1b4a8f" VerticalAlignment ="Top">
        <Grid Margin="8,0,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>



            <Border Background="#045080" Height="65" VerticalAlignment="Top" RenderTransformOrigin="0.503,0.926" Margin="0,25,32,0">
                <Grid Margin="8,0,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/MyOrganizer.Wpf;component/Assets/techs.png"
                    Width="32" Height="32" Margin="4,0,8,0"/>
                        <TextBlock Text=" Tooth Chart" Style="{StaticResource HeaderLabel}" />
                    </StackPanel>

                    <!-- Close button -->
                    <Button Grid.Column="1" Margin="50,0,0,0"
                              Width="46" Height="45"
                              Background="Transparent" BorderBrush="{x:Null}"
                              Click="pictureBox2_Click">
                        <TextBlock Text="✕" Foreground="White" FontSize="18" 
                        VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="4,100,4,8" VerticalAlignment="Center" Background="#3f70bf">
                <TextBlock Text="Client:" Foreground="White" Margin="0,0,6,0"/>
                <TextBlock x:Name="TxtClientName" Text="—" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
            <!-- Decorative teal bars -->

            <!-- Upper arch label -->
            <TextBlock Grid.Row="1" Text="Upper Arch" VerticalAlignment ="Center"
                   Foreground="#6CA3D7" FontWeight="Bold" Grid.RowSpan="2" Height="278" />

            <!-- Upper arch: 18..11 | 21..28 -->
            <!-- Upper arch: 18..11 | 21..28 -->
            <UniformGrid Grid.Row="2" Rows="1" Columns="16" Margin="0,1,0,32" Background="AliceBlue" LayoutTransform="{StaticResource FlipY}" Grid.RowSpan="2">
                <!-- 18..11 (right->center) -->
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="18" Tag="{StaticResource Img.Molar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,102,3,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="17" Tag="{StaticResource Img.Molar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="4,107,3,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="16" Tag="{StaticResource Img.Molar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,107,3,33"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="15" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,95,5,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="14" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="5,109,5,33"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="13" Tag="{StaticResource Img.Canine}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,106,7,33"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="12" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,95,6,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="11" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="5,95,6,33" RenderTransformOrigin="0.48,0.103"/>

                <!-- 21..28 (center->left) -->
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="21" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,95,4,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="22" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,107,6,33"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="23" Tag="{StaticResource Img.Canine}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="7,106,6,33"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="24" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="5,109,5,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="25" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="5,109,6,33"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="26" Tag="{StaticResource Img.Molar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,107,3,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="27" Tag="{StaticResource Img.Molar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,107,4,33"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="28" Tag="{StaticResource Img.Molar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,107,3,33"/>
            </UniformGrid>
            <TextBlock Grid.Row="3" Text="Lower Arch"
           Foreground="#6CA3D7" FontWeight="Bold" Margin="0,8,0,280" Grid.RowSpan="2"/>
            <!-- Lower arch: 48..41 | 31..38 -->
            <UniformGrid Grid.Row="4" Rows="1" Columns="16" Background="AliceBlue" Margin="0,8,0,10" >
                <!-- 48..41 (right->center) -->
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="48" Tag="{StaticResource Img.Premolar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,24,3,55" RenderTransformOrigin="0.603,0.42"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="47" Tag="{StaticResource Img.Premolar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="4,24,3,55"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="46" Tag="{StaticResource Img.Premolar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,24,3,40"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="45" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,47,5,72"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="44" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="5,47,5,72"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="43" Tag="{StaticResource Img.Canine}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,47,7,72"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="48" ToolTip="42" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="7,47,7,77"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="41" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,47,6,77"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="31" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,47,6,77"/>

                <!-- 31..38 (center->left) -->
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="50" ToolTip="32" Tag="{StaticResource Img.Incisor}"   Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="6,47,6,72"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" ToolTip="33" Tag="{StaticResource Img.Canine}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="0,47,5,72"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="34" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="5,52,5,77"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="52" ToolTip="35" Tag="{StaticResource Img.Canine}" Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="5,47,6,72"/>

                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="36" Tag="{StaticResource Img.Premolar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,24,3,40"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" Width="56" ToolTip="34" Tag="{StaticResource Img.Premolar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="3,24,4,55"/>
                <Button Style="{StaticResource ToothImageButtonStyle}" ToolTip="34" Tag="{StaticResource Img.Premolar}"    Click="Tooth_Click" ContextMenuOpening="Tooth_ContextMenu" Margin="4,24,2,55"/>
            </UniformGrid>

        </Grid>
    </Border>
</Window>
