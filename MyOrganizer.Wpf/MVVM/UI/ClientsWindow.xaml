<Window x:Class="MyOrganizer.Wpf.MVVM.UI.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="{loc:Loc ClientsList}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="1309" Height="666"
        Background="#41a8e8"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Header label -->
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Circle icon button -->
        <Style x:Key="CircleIconButton" TargetType="Button">
            <Setter Property="Width" Value="54"/>
            <Setter Property="Height" Value="54"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="root"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="9999"
                                    SnapsToDevicePixels="True"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ModernContextMenu-->
        <ContextMenu x:Key="ModernGridContextMenu"
                     Style="{StaticResource ModernContextMenu}"
                     ItemContainerStyle="{StaticResource ModernMenuItem}"
                     MinWidth="160">

            <MenuItem Header="{loc:Loc Add}" Click="btnSave_Click">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="&#xE710;"
                               FontSize="14"
                               Foreground="#2563EB"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="{loc:Loc Edit}" Click="btnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="&#xE70F;"
                               FontSize="14"
                               Foreground="#64f2fa"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="{loc:Loc Remove}" Click="btrDelete_Click" InputGestureText="Del">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="&#xE74D;"
                               FontSize="14"
                               Foreground="#DC2626"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
        <!-- Grid context menu -->

    </Window.Resources>

    <Grid>
        <!-- Top header -->
        <Border Background="#045080" Height="51" VerticalAlignment="Top">
            <Grid Margin="8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/MyOrganizer.Wpf;component/Assets/patients.png"
                           Width="32" Height="32" Margin="4,0,8,0"/>
                    <TextBlock Text="{loc:Loc Clients}" Style="{StaticResource HeaderLabel}" />
                </StackPanel>

                <!-- Close button -->
                <Button Grid.Column="1"
                        Width="46" Height="45"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="pictureBox2_Click">
                    <TextBlock Text="✕" Foreground="White" FontSize="18"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>

        <!-- Decorative teal bars -->
        <Rectangle Fill="#045080" Width="26" HorizontalAlignment="Left" Margin="0,64,0,0"/>
        <Rectangle Fill="#045080" Height="21" VerticalAlignment="Bottom" Margin="102,0,0,0"/>

        <!-- Main content area -->
        <Grid Margin="32,70,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48*"/>
                <ColumnDefinition Width="1003*"/>
                <ColumnDefinition Width="210"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search row -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="3">
                <TextBlock Text="{loc:Loc SearchBy}" Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbFind" Height="36" Style="{StaticResource ModernComboBox}" Width="140" Margin="0,0,8,10" Background="White" Panel.ZIndex="1000"/>
                <TextBox x:Name="txtFind" Height="36" Width="180" Style="{StaticResource ModernTextBox}"  Margin="0,0,8,10" Background="White"/>
                <Button x:Name="btnFind" Style="{StaticResource ModernButton}"
                        ToolTip="{loc:Loc Search}" Click="btnFind_Click" Background="Transparent" BorderBrush="LightBlue" Margin="0,0,0,10">
                    <Image Source="/MyOrganizer.Wpf;component/Assets/search.png" Height="34" Width="52"/>
                </Button>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgvClients"
                      Grid.Column="0" Grid.Row="1"
                      Background="White"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      ContextMenu="{StaticResource ModernGridContextMenu}" Grid.ColumnSpan="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{loc:Loc S.N}" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="{loc:Loc FirstName}" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc LastName}" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Patronymic}" Binding="{Binding MidlName}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc DayOfRegistration}" Binding="{Binding DateJoin, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Payment}" Binding="{Binding Price}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Remains}" Binding="{Binding Debet}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Phone}" Binding="{Binding PhoneNumber}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc DoubleVisit}" Binding="{Binding DateDobleJoin, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Right tools panel -->
            <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="5,0,0,0">
                <Border Background="#324163" Padding="8" Margin="0,0,0,10" CornerRadius="8" Height="330">
                    <StackPanel>
                        <DatePicker Style="{StaticResource ModernDatePicker}" x:Name="datemounth" Margin="0,0,0,1" Height="42"/>

                        

                        <Button x:Name="btnMonthIncome" Style="{StaticResource CircleIconButton}"
                                ToolTip="{loc:Loc MonthIncome}"
                                
                                Click="criculButton2_Click" Height="80" Width="82" >
                            <Image Source="/MyOrganizer.Wpf;component/Assets/price355.png" Stretch="Uniform" Width="77" Height="61" RenderTransformOrigin="0.732,0.454"/>
                        </Button>

                        <Button x:Name="btnMonthDebt" Style="{StaticResource CircleIconButton}"
                                ToolTip="{loc:Loc MonthDebt}"
                                Click="criculButton1_Click" Height="80" Width="82" >
                            <Image Source="/MyOrganizer.Wpf;component/Assets/debt2.png" Width="65" Height="69" />
                        </Button>

                        <TextBlock Text="{loc:Loc TotalAmount}" Foreground="WhiteSmoke" Margin="0,8,0,4"/>
                        <TextBox Style="{StaticResource ModernTextBox}" x:Name="txtSum"/>
                    </StackPanel>
                </Border>

                <!-- Add / Edit / Delete / Exit -->
                <Border Background="#3885b5" Padding="8" Margin="0,0,0,0" CornerRadius="8" Height="235" Width="197">
                <StackPanel >
                    <Button x:Name="btnSave1" Style="{StaticResource ModernButton}" ToolTip="{loc:Loc Add}"
                            Click="btnSave_Click" Margin="0,20,0,18" Background="#6fbffc"   >
                            <Image Source="/MyOrganizer.Wpf;component/Assets/add.png" Width="36" Height="36" />
                    </Button>

                    <Button x:Name="btnEdit1" Style="{StaticResource ModernButton}" ToolTip="{loc:Loc Edit}"
                            Click="btnEdit_Click" Margin="0,0,0,18" Background="#5981f0">
                        <Image Source="/MyOrganizer.Wpf;component/Assets/edit.png" Width="36" Height="36"/>
                    </Button>

                    <Button x:Name="btrDelete"
                            Style="{StaticResource ModernButton}"
                            Background="#f05c3e"
                            ToolTip="{loc:Loc Delete}"
                            Click="btrDelete_Click"
                            Margin="0,0,0,18">
                        <Image Source="/MyOrganizer.Wpf;component/Assets/delete.png" Width="36" Height="36" />
                    </Button>


                </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
