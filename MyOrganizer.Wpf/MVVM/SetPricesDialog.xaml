<Window x:Class="MyOrganizer.Wpf.MVVM.SetPricesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="Սահմանել գնացուցակ" Width="680" Height="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dg" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Տեսակ" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Tier 1" Binding="{Binding Tier1}" Width="*" />
                <DataGridTextColumn Header="Tier 2" Binding="{Binding Tier2}" Width="*" />
                <DataGridTextColumn Header="Tier 3" Binding="{Binding Tier3}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right"   Margin="0,8,0,0">
            <Button Content="OK" Width="100" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
