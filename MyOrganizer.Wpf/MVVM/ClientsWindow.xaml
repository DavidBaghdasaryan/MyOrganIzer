<Window x:Class="MyOrganizer.Wpf.MVVM.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="{loc:Loc ClientsList}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="1309" Height="666"
        Background="#20B2AA"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"   
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Header label -->
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Circle icon button -->
        <Style x:Key="CircleIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="bg" Fill="{TemplateBinding Background}" Opacity="0.15"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Opacity" Value="0.25"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Opacity" Value="0.35"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Grid context menu -->
        <ContextMenu x:Key="GridContextMenu" Style="{StaticResource ModernContextMenu}">
            <MenuItem Header="{loc:Loc Add}" Click="btnSave_Click">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" FontSize="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="{loc:Loc Edit}" Click="btnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" FontSize="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="{loc:Loc Remove}" Click="btrDelete_Click" InputGestureText="Del">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe MDL2 Assets"  Text="&#xE74D;" FontSize="14"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <!-- Top header -->
        <Border Background="#008B8B" Height="51" VerticalAlignment="Top">
            <Grid Margin="8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/MyOrganizer.Wpf;component/Assets/patients.png"
                           Width="32" Height="32" Margin="4,0,8,0"/>
                    <TextBlock Text="{loc:Loc Clients}" Style="{StaticResource HeaderLabel}" />
                </StackPanel>

                <!-- Close button -->
                <Button Grid.Column="1"
                        Width="46" Height="45"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="pictureBox2_Click">
                    <TextBlock Text="✕" Foreground="White" FontSize="18"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>

        <!-- Decorative teal bars to mimic WinForms layout -->
        <Rectangle Fill="Teal" Width="26" HorizontalAlignment="Left" Margin="0,64,0,0"/>
        <Rectangle Fill="Teal" Height="21" VerticalAlignment="Bottom" Margin="102,0,0,0"/>

        <!-- Main content area -->
        <Grid Margin="32,70,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="210"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search row -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
                <TextBlock Text="{loc:Loc Searchby}" Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbFind" Width="140" Margin="0,0,8,0" Background="#40E0D0"/>
                <TextBox x:Name="txtFind" Width="180" Margin="0,0,8,0" Background="#40E0D0"/>
                <Button x:Name="btnFind" Style="{StaticResource CircleIconButton}"
                        ToolTip="{loc:Loc Searc}" Click="btnFind_Click" Margin="0,0,8,0">
                    <Image Source="/MyOrganizer.Wpf;component/Assets/search.png" Width="36" Height="36"/>
                </Button>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgvClients"
                      Grid.Column="0" Grid.Row="1"
                      Background="#AFEEEE"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      ContextMenu="{StaticResource GridContextMenu}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{loc:Loc S.N}" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="{loc:Loc Name}" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc LastName}" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Patronymic}" Binding="{Binding MidlName}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc DayOfRegistration}" Binding="{Binding DateJoin, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Payment}" Binding="{Binding Price}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Remains}" Binding="{Binding Debet}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc Phone}" Binding="{Binding PhoneNumber}" Width="*"/>
                    <DataGridTextColumn Header="{loc:Loc DoubleVisit}" Binding="{Binding DateDobleJoin, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Right tools panel -->
            <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="12,0,0,0">
                <Border Background="#00CED1" Padding="8" Margin="0,0,0,8" CornerRadius="8">
                    <StackPanel>
                        <DatePicker x:Name="datemounth" Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <CheckBox x:Name="chPrice" Margin="0,0,16,0" ToolTip="Գումար"
                                      Checked="chPrice_Checked">
                                <Image Source="/MyOrganizer.Wpf;component/Assets/money.png" Width="24" Height="24"/>
                            </CheckBox>
                            <CheckBox x:Name="chbDebt" ToolTip="Պարտք" Checked="chbDebt_Checked">
                                <Image Source="/MyOrganizer.Wpf;component/Assets/debt.png" Width="24" Height="24"/>
                            </CheckBox>
                        </StackPanel>

                        <Button x:Name="btnMonthIncome" Style="{StaticResource CircleIconButton}"
                                ToolTip="Տվյալ ամսվա եկամուտը"
                                Click="criculButton2_Click" Margin="0,0,0,8">
                            <Image Source="/MyOrganizer.Wpf;component/Assets/income.png" Width="36" Height="36"/>
                        </Button>

                        <Button x:Name="btnMonthDebt" Style="{StaticResource CircleIconButton}"
                                ToolTip="Տվյալ ամսվա պարտքը"
                                Click="criculButton1_Click" Margin="0,0,0,8">
                            <Image Source="/MyOrganizer.Wpf;component/Assets/debt2.png" Width="36" Height="36"/>
                        </Button>

                        <TextBlock Text="Ընդհանուր գումար" Foreground="WhiteSmoke" Margin="0,8,0,4"/>
                        <TextBox x:Name="txtSum"/>
                    </StackPanel>
                </Border>

                <!-- Add / Edit / Delete / Exit -->
                <StackPanel>
                    <Button x:Name="btnSave1" Style="{StaticResource CircleIconButton}" ToolTip="Գրանցել"
                            Click="btnSave_Click" Margin="0,0,0,8" Background="#66CDAA">
                        <Image Source="/MyOrganizer.Wpf;component/Assets/add.png" Width="36" Height="36"/>
                    </Button>

                    <Button x:Name="btnEdit1" Style="{StaticResource CircleIconButton}" ToolTip="Խմբագրել"
                            Click="btnEdit_Click" Margin="0,0,0,8" Background="#00CED1">
                        <Image Source="/MyOrganizer.Wpf;component/Assets/edit.png" Width="36" Height="36"/>
                    </Button>

                    <Button x:Name="btrDelete" Style="{StaticResource CircleIconButton}" ToolTip="Հեռացնել"
                            Click="btrDelete_Click" Margin="0,0,0,8" Background="#CD5C5C">
                        <Image Source="/MyOrganizer.Wpf;component/Assets/delete.png" Width="36" Height="36"/>
                    </Button>

                    <Button x:Name="btnExit" Style="{StaticResource CircleIconButton}" ToolTip="ՓԱԿԵԼ"
                            Click="btnExit_Click" Background="#4682B4">
                        <Image Source="/MyOrganizer.Wpf;component/Assets/exit.png" Width="36" Height="36"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
