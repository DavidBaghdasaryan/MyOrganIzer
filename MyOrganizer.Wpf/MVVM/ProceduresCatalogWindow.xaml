<!-- MVVM/ProceduresCatalogWindow.xaml -->
<Window x:Class="MyOrganizer.Wpf.MVVM.ProceduresCatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="{loc:Loc Procedurе}" Width="420" Height="360" WindowStartupLocation="CenterOwner">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
      <TextBox x:Name="tbName" Width="260" Margin="0,0,8,0" />
            <Button Content="{loc:Loc Add}" Width="100" Click="Add_Click"/>
    </StackPanel>

    <ListBox x:Name="lb" Grid.Row="1" DisplayMemberPath="Name" />

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="{loc:Loc Delete}" Width="100" Margin="0,0,8,0" Click="Delete_Click"/>
            <Button Content="{loc:Loc Close}" Width="100" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>
