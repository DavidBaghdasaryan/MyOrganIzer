<Window x:Class="MyOrganizer.Wpf.MVVM.TechnicsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="{loc:Loc Technicians}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="1150" Height="600"
        Background="#DEB887"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid>
        <!-- Header -->
        <Border Background="DarkGoldenrod" Height="50" VerticalAlignment="Top">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{loc:Loc Technicians}"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="WhiteSmoke"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="✕"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="20"
                        Foreground="White"
                        Width="45"
                        Height="45"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <StackPanel Margin="20,70,20,20" Orientation="Vertical">

            <!-- Controls -->
            <StackPanel Orientation="Horizontal" >

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="{loc:Loc Materials}" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbTechnics" Style="{StaticResource ModernComboBox}" Width="200" Height="36"/>
                </StackPanel>

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="{loc:Loc PaidAmount}" FontWeight="Bold"/>
                    <TextBox x:Name="txtPrice" Style="{StaticResource ModernTextBox}" Width="200" Height="36"/>
                </StackPanel>

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="{loc:Loc TransactionDate}" FontWeight="Bold"/>
                    <DatePicker Style="{StaticResource ModernDatePicker}" x:Name="dpDate" Width="150"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="{loc:Loc FullName}" FontWeight="Bold"/>
                    <TextBox x:Name="txtTechnoName" Style="{StaticResource ModernTextBox}" Width="150" Height="36"/>
                </StackPanel>

            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="{loc:Loc Save}"  Style="{StaticResource ModernButton}"     Background="Yellow"     Margin="0,0,8,0"  Foreground="White" Width="100" Click="BtnAdd_Click"/>
                <Button Content="{loc:Loc Edit}"        Style="{StaticResource ModernButton}" Background="Orange" Margin="0,0,8,0" Foreground="White" Width="100" Click="BtnEdit_Click"/>
                <Button Content="{loc:Loc Delete}"      Style="{StaticResource ModernButton}" Background="Red"     Foreground="White" Width="100" Click="BtnDelete_Click"/>
                <Button    Style="{StaticResource ModernButton}"  Margin="650,0,8,0" Background="Peru" Foreground="White" Width="120" Click="BtnSum_Click">
                    <TextBlock Text="{loc:Loc ViewAmount}" Foreground="Wheat" FontWeight="Bold" Height="23" />
                </Button>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgTechnics"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Background="White"
                      Height="350"
                      Margin="0,10,0,0"/>

            <!-- Sum -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{loc:Loc PaidPerMonth}" FontWeight="Bold" Foreground="OrangeRed" Margin="0,10,8,0"/>
                <TextBox  Style="{StaticResource ModernTextBox}" x:Name="txtSum" Margin="0,10,8,0" Width="150" Height="36"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
