<Window x:Class="MyOrganizer.Wpf.MVVM.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MyOrganizer.Wpf.Localization"
        Title="{loc:Loc PasswordRequest}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="641" Height="297"
        Background="#2B6CA3"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        ShowInTaskbar="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid>
        <!-- Blue border bars -->
        <Rectangle Fill="#00B7FF" Height="21" VerticalAlignment="Top" Margin="21,-6,0,0"/>
        <Rectangle Fill="#00B7FF" Width="26" HorizontalAlignment="Left" Margin="0,-6,0,0"/>
        <Rectangle Fill="#00B7FF" Width="26" HorizontalAlignment="Right" Margin="0,2,0,0"/>
        <Rectangle Fill="#00B7FF" Height="21" VerticalAlignment="Bottom" Margin="100,0,0,0"/>

        <!-- App title -->
        <TextBlock Text="Stom Organizer"
                   FontFamily="Centaur"
                   FontSize="22"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,38,36,0" />

        <!-- Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="356*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <!-- Left-side image -->
            <Image Source="/MyOrganizer.Wpf;component/Assets/login_icon.jpg"
                   Width="100" Height="120" Stretch="UniformToFill"
                   Margin="0,176,0,1"/>

            <!-- Center form -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Grid.ColumnSpan="2" >

                <!-- 🔹 Language dropdown -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" HorizontalAlignment="Right" Height="34">
                    <TextBlock Text="{loc:Loc CurLanguage}" Foreground="White" FontWeight="ExtraBlack"
                               VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="CmbLanguage"
                          Width="100" Height="30"
                          Style="{StaticResource ModernComboBox}"
                          SelectedValuePath="Tag"
                          SelectionChanged="CmbLanguage_SelectionChanged">
                        <ComboBoxItem Content="Հայերեն (AM)" Tag="hy"/>
                        <ComboBoxItem Content="Русский (RU)" Tag="ru"/>
                        <ComboBoxItem Content="English (EN)" Tag="en"/>
                    </ComboBox>

                </StackPanel>

                <!-- PasswordBox with watermark -->
                <Grid Width="303" Height="30" HorizontalAlignment="Left" Margin="0,0,0,10">
                    <PasswordBox x:Name="PasswordBox"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 Padding="8,2,8,2"
                                 PasswordChar="*"
                                 PreviewMouseDown="PasswordBox_PreviewMouseDown"
                                 KeyDown="PasswordBox_KeyDown"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBlock x:Name="Watermark"
                               Text="{loc:Loc Enterpassword}"
                               Foreground="#FFFF8080"
                               FontStyle="Italic"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               Opacity="0.9"/>
                </Grid>

                <!-- Login button -->
                <Button x:Name="BtnEnter"
                        Content="{loc:Loc Enter}"
                        Width="127" Height="35"
                        Background="#1E90FF" Foreground="White"
                        BorderBrush="#1E90FF"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Click="BtnEnter_Click"/>
            </StackPanel>

            <!-- Close button -->
            <Button Grid.Column="3"
                    Content="×"
                    FontSize="18"
                    Width="32" Height="32"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="{x:Null}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-9,1,0"
                    Click="Close_Click"/>
        </Grid>
    </Grid>
</Window>
